<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet"
    android:gravity="center_horizontal"
    tools:context="it.parello.tictactoenodejs.activities.MultiPlayer">


    <Button
        android:id="@+id/b1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#e5e5e5"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/b2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b2"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/b2"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.8" />

    <Button
        android:id="@+id/b2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b3"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/b3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="#e5e5e5"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/b2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.2" />


    <Button
        android:id="@+id/b4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b5"
        app:layout_constraintLeft_toLeftOf="@+id/b1"
        app:layout_constraintRight_toRightOf="@+id/b1"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginLeft="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/b5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#e5e5e5"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/b2"
        app:layout_constraintRight_toRightOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/b2"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/b6"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:textSize="50dp"
        android:textColor="#000000"
        android:backgroundTint="#ffffff"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/b3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/b3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/b3"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginRight="0dp" />


    <Button
        android:id="@+id/b7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#e5e5e5"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/b4"
        app:layout_constraintRight_toRightOf="@+id/b4"
        app:layout_constraintTop_toBottomOf="@+id/b4"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/b8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ffffff"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/b5"
        app:layout_constraintRight_toRightOf="@+id/b5"
        app:layout_constraintTop_toBottomOf="@+id/b5"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/b9"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#e5e5e5"
        android:textColor="#000000"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/b6"
        app:layout_constraintRight_toRightOf="@+id/b6"
        app:layout_constraintTop_toBottomOf="@+id/b6"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />


    <TextView
        android:id="@+id/dialogue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Click a button to start"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/b8"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.47" />

    <Button
        android:id="@+id/restart"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="@string/rematch"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dialogue"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintVertical_bias="0.282" />

</android.support.constraint.ConstraintLayout>

